doctype html
html
  head
    title 用户管理
  body
    h1 用户管理
    a(href="/users/add") 添加用户
    table
      tr
        th 用户名
        th 角色
        th 操作
      each user in users
        tr
          td= user.username
          td= user.role
          td
            form(action=`/users/delete/${user._id}` method="POST")
              button(type="submit") 删除
            form(action=`/users/update/${user._id}` method="POST")
              input(type="text" name="username" value=user.username required)
              select(name="role")
                option(value="user" selected=user.role === 'user') 普通用户
                option(value="admin" selected=user.role === 'admin') 管理员
              button(type="submit") 更新
